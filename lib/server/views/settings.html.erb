<!DOCTYPE html>
<meta charset='utf-8'/>
<html>
  <head>
    <title>

      Search
    </title>
    <link rel='stylesheet' media='screen' href='/css/iliad.bundle.css'/>
    <script src='/js/routes.js'></script>
    <script src='/js/iliad.bundle.js'></script>
  </head>
  <body>

    <div id='root'></div>
    <script type='text/javascript'>

      var APP_CONFIG = <%= config_json %>;
      var iliad_props = {
        user: <%= @user ? "'#{@user.first} #{@user.last}'" : 'null'%>,
        mode: 'settings',
        environment: '<%= App.instance.environment %>',
        can_edit: <%=  @user && @user.can_edit?(@params[:project_name]) ? :true : :false  %>,
        is_admin: <%=  @user && @user.is_admin?(@params[:project_name]) ? :true : :false  %>,
        settings_page: '<%= @params[:settings_page] %>'
      };

      const iliad = new IliadApp(iliad_props, 'root');
    </script>
  </body>
</html>
