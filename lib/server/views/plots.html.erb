<!DOCTYPE html>
<meta charset='utf-8'/>
<html>

  <head>

    <title>

      Plots
    </title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.0.13/css/all.css' integrity='sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp' crossorigin='anonymous'>
    <link rel='stylesheet' media='screen' href='/css/iliad.bundle.css'/>
    <script src='/js/routes.js'></script>
    <script src='/js/iliad.bundle.js'></script>
  </head>
  <body>

    <div id='root'></div>
    <script type='text/javascript'>

      var APP_CONFIG = <%= config_json %>;
      const iliad = new IliadApp(
        {
          user: <%= @user ? "'#{@user.first} #{@user.last}'" : 'null'%>,
          mode: 'plots',
          environment: '<%= App.instance.environment %>',
          manifestsUI: {
            selected: <%= @params[:manifest_id] ? @params[:manifest_id] : 'null' %>
          },
          plots: {
            selected: <%= @params[:id] ? @params[:id] : 'null' %>
          }
        },
        'root'
      );
    </script>
  </body>
</html>
